{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {},
  "overrides": [
    {
      "files": ["webpack.*.js", "postcss.config.js"],
      "rules": {
        "import/no-extraneous-dependencies": 0,
        "global-require": 0,
        "import/no-dynamic-require": 0
      }
    },
    {
      "files": ["index.js"],
      "rules": {
        "react/jsx-filename-extension": 0
      }
    }
  ]
}
